@model WebApp.Data.Entities.UserEntity

<form method="post" asp-action="Create">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Create User</h2>
		</div>
	</div>

	<div class="row ">
		<div class="col-8">
			<div class="form-group row my-4">
				<div class="col-4">
					<label asp-for="Login"></label>
				</div>
				<div class="col-8">
					<input asp-for="Login" class="form-control" />
				</div>
			</div>
			<div class="form-group row my-4">
				<div class="col-4">
					<label asp-for="Email"></label>
				</div>
				<div class="col-8">
					<input asp-for="Email" class="form-control" />
				</div>
			</div>
			<div class="form-group row my-4">
				<div class="col-4">
					<label asp-for="Phone"></label>
				</div>
				<div class="col-8">
					<input asp-for="Phone" class="form-control" />
				</div>
			</div>
			<div class="form-group row my-4">
				<div class="col-8 offset-4 row">
					<div class="col">
						<a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100">
							Back
						</a>
					</div>
					<div class="col">
						<input type="submit" class="btn btn-success w-100" value="Create" />
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
